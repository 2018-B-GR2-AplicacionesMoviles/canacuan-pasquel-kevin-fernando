<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistroCliente2Activity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText_edad"
            android:text="EDAD" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/textView_RegistroCliente2"
            android:layout_marginEnd="140dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2_fecha_nacimineto" android:text="FECHA DE NACIMIENTO"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_edad" android:layout_marginEnd="140dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="DIRECCION"
            android:ems="10"
            android:id="@+id/editText3_direccion"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2_fecha_nacimineto"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="140dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_direccion" android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/editText3_direccion"
            android:layout_marginStart="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2_fecha_nacimineto"/>
    <TextView
            android:text="REGISTRO CLIENTE 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_RegistroCliente2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="GUARDAR DATOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_okCliente" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="50dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>