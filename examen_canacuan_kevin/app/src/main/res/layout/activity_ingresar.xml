<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarActivity">

    <TextView
            android:layout_width="131dp"
            android:layout_height="39dp"
            android:id="@+id/textView_nombre" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent" android:text="NombreProducto"/>
    <TextView
            android:text="Precio"
            android:layout_width="131dp"
            android:layout_height="39dp"
            android:id="@+id/textView_precio"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/textView_nombre"/>
    <TextView
            android:text="Cantidad"
            android:layout_width="131dp"
            android:layout_height="39dp"
            android:id="@+id/textView_cantidad"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_precio"/>
    <TextView
            android:text="Tipo"
            android:layout_width="131dp"
            android:layout_height="39dp"
            android:id="@+id/textView_tipo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/textView_cantidad"/>
    <Button
            android:text="CANCELAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="433dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/button_cancelar"/>
    <Button
            android:text="GUARDAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="432dp"
            tools:layout_editor_absoluteX="279dp" android:id="@+id/button_guardar"/>
</android.support.constraint.ConstraintLayout>